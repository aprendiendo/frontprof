@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_calro = #d0d2d3

a
	text-decoration none

body
	font-family: 'Varela Round', sans-serif;
	font-sixe 16px

figure
		margin 0

//Buttons
.buttom-menu
	color gris_oscuro
	left .5em
	margin-top  -10px
	position absolute
	top 50%

//oocss clases
.autor
	color gris_calro

.border-buttom
	border-bottom 1px solid gris_calro

.container
	padding 1.4rem
	font-size 0
	text-align center

.header
	height 3.5em
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.menu
	display none

.name
	color gris_oscuro

.relative
	position relative

.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-botton 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

